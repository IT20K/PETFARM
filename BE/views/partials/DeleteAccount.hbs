{{>Header}}


<div class="position-fixed bg-light overflow-auto" style="right: 0; width: 80%; height:100%">
    <div class="container-xl p-5">
        <div class="card">
            <div class="card-header bg-dark text-white px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h2 class="card-title text-white mb-0">Detail Account</h2>
                        <div class="card-subtitle">Delete and history</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-lg btn-secondary" asp-action="Create" asp-area="Admin" asp-controller="Users"
                            href="/users/v1/api/get">Create New User</a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Simple DataTables example-->
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class=" d-flex flex-wrap w-100">
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Username:</span>
                                <input type="text" class="form-control" id="username" value="{{user.username}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Email:</span>

                                <input type="email" class="form-control" id="email" value="{{user.email}}" readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Phone:</span>

                                <input type="text" class="form-control" id="phone" value="{{user.phone}}" readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Address:</span>

                                <input type="text" class="form-control" id="address" value="{{user.address}}" readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Fullname:</span>

                                <input type="text" class="form-control" id="fullname" value="{{user.fullname}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Birthday:</span>

                                <input type="text" class="form-control" id="birthday" value="{{user.birthday}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Username:</span>

                                <input type="text" class="form-control" id="username" value="{{user.username}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Date_created:</span>

                                <input type="text" class="form-control" id="date_create" value="{{user.date_create}}"
                                    readonly>
                            </div>

                            <div class="form-group w-50 p-2 d-flex">
                                <form method="post" action="/users/v1/api/delete/{{user._id}}?_method=DELETE ">
                                    <button type="submit" class="btn btn-danger mt-2 mb-2">Delete</button>
                                </form>
                               
                                  <a class="btn btn-primary text-white m-2" href="/users">
                                    Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>