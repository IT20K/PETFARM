{{>Header}}


<div class="position-fixed bg-light overflow-auto" style="right: 0; width: 80%; height:100%">
    <div class="container-xl p-5">
        <div class="card">
            <div class="card-header bg-dark text-white px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h2 class="card-title text-white mb-0">Delete Product</h2>
                        <div class="card-subtitle">Delete and history</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-lg btn-secondary" asp-action="Create" asp-area="Admin" asp-controller="Users"
                            href="/users/v1/api/get">Create New Product</a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Simple DataTables example-->
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class=" d-flex flex-wrap w-100">
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Productname:</span>
                                <input type="text" class="form-control" id="productname" value="{{product.productname}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Currency:</span>

                                <input type="text" class="form-control" id="currency" value="{{product.currency}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Weight:</span>

                                <input type="number" class="form-control" id="weight" value="{{product.weight}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Quality:</span>

                                <input type="number" class="form-control" id="quality" value="{{product.quality}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Brand:</span>

                                <input type="text" class="form-control" id="brand" value="{{product.brand}}" readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Category:</span>

                                <input type="text" class="form-control" id="category" value="{{product.category}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Sold:</span>

                                <input type="text" class="form-control" id="sold" value="{{product.sold}}" readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">Producter:</span>

                                <input type="text" class="form-control" id="producter" value="{{product.producter}}"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2">
                                <span class="field-label">Organised:</span>

                                <input type="text" class="form-control" id="organised" value="{{product.organised}}" readonly>
                            </div>
                            <div class="form-group w-50 pt-2 pb-2">
                                <span class="field-label">?</span>

                                <input type="text" class="form-control" id="?"
                                    readonly>
                            </div>
                            <div class="form-group w-50 p-2 d-flex">
                                   <form method="post" action="/products/v1/api/delete/{{product._id}}?_method=DELETE ">
                                    <button type="submit" class="btn btn-danger mt-2 mb-2">Delete</button>
                                </form>
                               
                                  <a class="btn btn-primary text-white m-2" href="/products">
                                    Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>