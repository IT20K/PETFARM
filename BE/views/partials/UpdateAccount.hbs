{{>Header}}


<div class="position-fixed bg-light overflow-auto" style="right: 0; width: 80%; height:100%">
    <div class="container-xl p-5">
        <div class="card">
            <div class="card-header bg-dark text-white px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h2 class="card-title text-white mb-0">Users Management</h2>
                        <div class="card-subtitle">Details and history</div>
                    </div>
                    {{!-- <div class="d-flex gap-2">
