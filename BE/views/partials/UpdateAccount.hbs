                    </div> --}}
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Simple DataTables example-->
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class="  w-100">
                            <form class="w-100 d-flex flex-wrap" action="/users/v1/api/update/{{user._id}}"
                                method="post">
                                <div class="form-group w-50 p-2">
                                    <input type="text" class="form-control" placeholder="Please enter your username"
                                        id="username" name="username" value="{{user.username}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <input type="email" class="form-control" placeholder="Please enter your email"
                                        id="email" name="email" value="{{user.email}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <input type="text" class="form-control" placeholder="Please enter your phone"
                                        id="phone" name="phone" value="{{user.phone}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <input type="text" class="form-control" placeholder="Please enter your address"
                                        id="address" name="address" value="{{user.address}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <input type="text" class="form-control" placeholder="Please enter your fullname"
                                        id="fullname" name="fullname" value="{{user.fullname}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <input type="date" class="form-control" id="birthday" name="birthday"
                                        value="{{user.birthday}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <input type="text" class="form-control" placeholder="Please enter your username"
                                        id="username" value="{{user.username}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <input type="date" class="form-control" placeholder="Please enter your date_create"
                                        id="date_create" name="date_create" value="{{user.date_create}}">
                                </div>
                                <div class="form-group w-50 p-2 d-flex">
                                    <button type="submit" class="btn btn-warning mt-2 mb-2">Update</button>
                                    <a href="/users" class="btn btn-primary  m-2">Back</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>