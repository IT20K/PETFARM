{{>Header}}


<div class="position-fixed bg-light overflow-auto" style="right: 0; width: 80%; height:100%">
    <div class="container-xl p-5">
        <div class="card">
            <div class="card-header bg-dark text-white px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h2 class="card-title text-white mb-0">Update Product</h2>
                        <div class="card-subtitle">Details and history</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-lg btn-secondary" asp-action="Create" asp-area="Admin" asp-controller="Users"
                            href="/users/v1/api/get">Create New Product</a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Simple DataTables example-->
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class=" d-flex flex-wrap w-100">
                            <form class="w-100 d-flex flex-wrap" action="/products/v1/api/update/{{product._id}}"
                                method="post">

                                <div class="form-group w-50 p-2">
                                    <span class="field-label">Productname:</span>
                                    <input type="text" class="form-control" name="productname" id="productname"
                                        value="{{product.productname}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <span class="field-label">Currency:</span>

                                    <input type="text" class="form-control" id="currency" name="currency"
                                        value="{{product.currency}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <span class="field-label">Weight:</span>

                                    <input type="number" class="form-control" id="weight" name="weight"
                                        value="{{product.weight}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <span class="field-label">Quality:</span>

                                    <input type="number" class="form-control" id="quality" name="quality"
                                        value="{{product.quality}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <span class="field-label">Brand:</span>

                                    <input type="text" class="form-control" id="brand" name="brand"
                                        value="{{product.brand}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <span class="field-label">Category:</span>

                                    <input type="text" class="form-control" id="category" name="category"
                                        value="{{product.category}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <span class="field-label">Sold:</span>

                                    <input type="text" class="form-control" id="sold" name="sold"
                                        value="{{product.sold}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <span class="field-label">Producter:</span>

                                    <input type="text" class="form-control" name="producter" id="producter"
                                        value="{{product.producter}}">
                                </div>
                                <div class="form-group w-50 p-2">
                                    <span class="field-label">Organised:</span>

                                    <input type="text" class="form-control" name="organised" id="organised"
                                        value="{{product.organised}}">
                                </div>
                                <div class="form-group w-50 pt-2 pb-2">
                                    <span class="field-label">?</span>

                                    <input type="text" class="form-control" id="?">
                                </div>
                                <div class="form-group w-50 p-2 d-flex">
                                    <button type="submit" class="btn btn-warning mt-2 mb-2">Update</button>
                                    <a href="/products" class="btn btn-primary  m-2">Back</a>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>